<!--[if (gte IE 9)|!(IE)]><!--> <html lang="en"> <!--<![endif]-->
<head>
	<meta charset="utf-8" />
	
	<!-- Uncomment to make IE8 render like IE7 -->
	<!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->
	
	<!-- Set the viewport width to device width for mobile -->
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- Tangerine Web Font -->
  <link href='http://fonts.googleapis.com/css?family=Tangerine:700' rel='stylesheet' type='text/css'>

	<title>LetsWrite</title>
  
	<!-- Included CSS Files -->
	<%= stylesheet_link_tag    "application" %>
	
	<!-- Included JS Files  -->
	<%= javascript_include_tag "application" %>
  
  <%= csrf_meta_tags %>
</head>
<body>

    <nav class="top-bar">
      <ul>
        <li class="name"><h1><a href="#">LetsWrite.com</a></h1></li>
        <li class="toggle-topbar"><a href="#"></a></li>
        <li class="divider"></li>
      </ul>
      <section>
        <ul class="right">
          <li class="divider"></li>
          <li><a href="http://letswritegw.wordpress.com">Check Out Our Blog</a></li>
          <li class="divider"></li>
        </ul>
      </section>
    </nav>

<div class="container">
  
  <div class="row">
    <div class="twelve columns" style="font-family: 'Tangerine', cursive; font-size: 8em; text-align: center;">
      Lets Write
    </div>
  </div>

  <div class="row" style="margin-top: 30px">
    <div class="three columns">
      <ul class="nav-bar vertical">
        <li><%= link_to "About Us", pages_about_path %></li>
        <li><%= link_to "Programs", pages_programs_path %></li>
        <li><%= link_to "Gallery", pages_gallery_path %></li>
        <li><%= link_to "Contact Us", pages_contact_path %></li>
      </ul>
    </div>

    <div class="nine columns">
      <%= yield %>
    </div>

  </div>

  <div class="row" style="margin-top: 30px">
    <hr />
  </div>

</div>

</body>
</html>
